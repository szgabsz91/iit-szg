{
  "name": "iit-szg",
  "version": "3.2.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "i18n:generate": "ng extract-i18n --output-path ./src/locale",
    "prestart": "./scripts/generate-graphs.sh && ./scripts/generate-static-content.js en",
    "start": "ng serve",
    "prestart:hu": "./scripts/generate-graphs.sh && ./scripts/generate-static-content.js hu",
    "start:hu": "ng serve --configuration=hu",
    "prebuild": "./scripts/generate-graphs.sh && ./scripts/generate-static-content.js --prod",
    "build": "ng build --configuration production --localize",
    "postbuild": "cp -R ./src/assets-hu/* ./dist/iit-szg/hu/assets && ./scripts/minify-html.sh ./dist/iit-szg/en/index.html && ./scripts/minify-html.sh ./dist/iit-szg/hu/index.html",
    "test": "ng test --watch=false --code-coverage",
    "test:watch": "ng test",
    "lint": "prettier --check . && ng lint",
    "lint:fix": "prettier --write . && ng lint --fix",
    "_cypress": "echo 'Waiting for the server to start on port 4200' && wait-on http-get://localhost:4200/ && cypress run --config-file cypress/cypress.config.ts --browser chrome --headless",
    "e2e": "run-p --print-label --race start _cypress",
    "e2e:watch": "cypress open --config-file cypress/cypress.config.ts --browser chrome --e2e",
    "lighthouse": "lhci autorun",
    "deploy": "firebase deploy",
    "deploy:rc": "firebase hosting:channel:deploy --expires 1d rc",
    "release": "semantic-release",
    "ci": "yarn lint && yarn test && yarn e2e && yarn build"
  },
  "dependencies": {
    "@angular/animations": "^14.1.3",
    "@angular/cdk": "^14.1.3",
    "@angular/common": "^14.1.3",
    "@angular/compiler": "^14.1.3",
    "@angular/core": "^14.1.3",
    "@angular/forms": "^14.1.3",
    "@angular/localize": "^14.1.3",
    "@angular/material": "^14.1.3",
    "@angular/platform-browser": "^14.1.3",
    "@angular/platform-browser-dynamic": "^14.1.3",
    "@angular/router": "^14.1.3",
    "core-js": "^3.14.0",
    "ngx-markdown": "^14.0.1",
    "rxjs": "~6.6.7",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.3",
    "@angular-eslint/builder": "^14.0.3",
    "@angular-eslint/eslint-plugin": "^14.0.3",
    "@angular-eslint/eslint-plugin-template": "^14.0.3",
    "@angular-eslint/schematics": "^14.0.3",
    "@angular-eslint/template-parser": "^14.0.3",
    "@angular/cli": "^14.1.3",
    "@angular/compiler-cli": "^14.1.3",
    "@angular/language-service": "^14.1.3",
    "@lhci/cli": "^0.9.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jasmine": "~4.3.0",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^18.7.11",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "archiver": "^5.3.1",
    "cypress": "^10.7.0",
    "cypress-commands": "^3.0.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "firebase-tools": "^11.8.0",
    "html-minifier": "^4.0.0",
    "jasmine-auto-spies": "^6.9.9",
    "jasmine-core": "~4.3.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.4",
    "ts-node": "~10.0.0",
    "typescript": "~4.6.4",
    "wait-on": "^6.0.1"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18.7.0",
    "yarn": ">=1.22.19"
  }
}
