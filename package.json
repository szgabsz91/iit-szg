{
  "name": "iit-szg",
  "version": "1.16.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "i18n:generate": "ng xi18n --output-path locale",
    "prestart": "./scripts/generate-graphs.sh && ./scripts/generate-static-content.js en",
    "start": "ng serve",
    "prestart:hu": "./scripts/generate-graphs.sh && ./scripts/generate-static-content.js hu",
    "start:hu": "ng serve --configuration=hu",
    "prebuild": "./scripts/generate-graphs.sh && ./scripts/generate-static-content.js --prod",
    "build": "ng build --configuration production --localize",
    "postbuild": "cp -R ./src/assets-hu/* ./dist/iit-szg/hu/assets",
    "test": "ng test --watch=false --code-coverage",
    "test:watch": "ng test",
    "lint": "ng lint",
    "pree2e": "./scripts/generate-graphs.sh && ./scripts/generate-static-content.js en",
    "e2e": "ng e2e",
    "deploy": "firebase deploy",
    "release": "semantic-release",
    "ci": "yarn lint && yarn test && yarn e2e && yarn build"
  },
  "dependencies": {
    "@angular/animations": "~12.0.4",
    "@angular/cdk": "~12.0.4",
    "@angular/common": "~12.0.4",
    "@angular/compiler": "~12.0.4",
    "@angular/core": "~12.0.4",
    "@angular/forms": "~12.0.4",
    "@angular/localize": "^12.0.4",
    "@angular/material": "^12.0.4",
    "@angular/platform-browser": "~12.0.4",
    "@angular/platform-browser-dynamic": "~12.0.4",
    "@angular/router": "~12.0.4",
    "core-js": "^3.14.0",
    "ngx-markdown": "^12.0.1",
    "rxjs": "~6.6.7",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.4",
    "@angular-eslint/builder": "^12.1.0",
    "@angular-eslint/eslint-plugin": "^12.1.0",
    "@angular-eslint/eslint-plugin-template": "^12.1.0",
    "@angular-eslint/schematics": "^12.1.0",
    "@angular-eslint/template-parser": "^12.1.0",
    "@angular/cli": "^12.0.4",
    "@angular/compiler-cli": "~12.0.4",
    "@angular/language-service": "~12.0.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jasmine": "~3.7.7",
    "@types/jasminewd2": "~2.0.9",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "archiver": "^5.3.0",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.2.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "firebase-tools": "^9.12.1",
    "jasmine-core": "~3.7.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.6.0",
    "protractor": "^7.0.0",
    "semantic-release": "^17.4.3",
    "ts-node": "~10.0.0",
    "typescript": "~4.2.3"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.3.0",
    "yarn": ">=1.22.10"
  }
}
