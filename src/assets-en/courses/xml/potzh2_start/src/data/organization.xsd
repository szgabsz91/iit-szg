<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:o="http://iit.uni-miskolc.hu/xml/organization"
           targetNamespace="http://iit.uni-miskolc.hu/xml/organization"
           elementFormDefault="qualified">
  
  <xs:element name="organization" type="o:organizationType"/>
  
  <xs:complexType name="organizationType">
    <xs:sequence>
      <xs:element name="project" type="o:projectType" maxOccurs="unbounded"/>
      <xs:element name="employee" type="o:employeeType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:complexType name="projectType">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="member" type="o:idType" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="pid" type="o:idType" use="required"/>
  </xs:complexType>
  
  <xs:complexType name="employeeType">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
    </xs:sequence>
    <xs:attribute name="eid" type="o:idType" use="required"/>
  </xs:complexType>
  
  <xs:simpleType name="idType">
    <xs:restriction base="xs:string">
      <xs:pattern value="[a-z]\d"/>
    </xs:restriction>
  </xs:simpleType>
  
</xs:schema>